@model IEnumerable<ModelLayer.FlightReservation>

@{
    ViewBag.Title = "AvailableFlights";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AvailableFlights</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartureStationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArrivalStationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DepartureDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FlightNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartureStationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArrivalStationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DepartureDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FlightNumber)
        </td>
        <td>
            @Html.ActionLink("Select", "Select", new { id=item.Id }) |
        </td>
    </tr>
}

</table>
